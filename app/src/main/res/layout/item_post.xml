<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="8dp"
    android:elevation="17dp"

    android:orientation="vertical"
    app:cardCornerRadius="30dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF186"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_title_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="title"
            android:textColor="#000"
            android:textSize="18dp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_body_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_title_post"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"

            android:layout_marginTop="5dp"
            android:background="@drawable/square"
            android:text="body"
            android:textColor="#E1665A5A"
            android:textSize="15dp" />

        <View
            android:layout_width="match_parent"
            android:id="@+id/vv"
            android:layout_height="1dp"
            android:layout_below="@id/txt_body_post"
            android:layout_marginTop="30dp"
            android:background="@color/colorAccent" />

        <Button
            android:id="@+id/btn_comment_post"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/vv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text="Comment"
            android:textAllCaps="false"
            android:textSize="12dp"

            android:textColor="#000" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>